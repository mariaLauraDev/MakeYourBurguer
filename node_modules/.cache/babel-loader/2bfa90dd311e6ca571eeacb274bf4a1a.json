{"ast":null,"code":"export default {\n  name: 'BurguerForm',\n  data() {\n    return {\n      paes: null,\n      carnes: null,\n      opcionaisdata: null,\n      nome: null,\n      pao: null,\n      carne: null,\n      opcionais: [],\n      msg: null\n    };\n  },\n  methods: {\n    async getIngredientes() {\n      const req = await fetch('http://localhost:3000/ingredientes');\n      const data = await req.json();\n      this.paes = data.paes;\n      this.carnes = data.carnes;\n      this.opcionaisdata = data.opcionais;\n    },\n    async createBurguer(e) {\n      e.preventDefault();\n      const data = {\n        nome: this.nome,\n        carnes: this.nome,\n        pao: this.pao,\n        opcionais: Array.from(this.opcionais),\n        status: \"Solicitado\"\n      };\n      const dataJson = JSON.stringify(data);\n      const req = await fetch('http://localhost:3000/burgers', {\n        method: 'POST',\n        headers: {\n          \"Content-Type\": application / json\n        },\n        body: dataJson\n      });\n      const res = await req.json();\n      console.log(res);\n    }\n  },\n  mounted() {\n    this.getIngredientes();\n  }\n};","map":{"version":3,"mappings":"AA+CA,eAAe;EACbA,IAAI,EAAE,aAAa;EACnBC,IAAI,GAAE;IACJ,OAAM;MACJC,IAAI,EAAE,IAAI;MACVC,MAAM,EAAE,IAAI;MACZC,aAAa,EAAE,IAAI;MACnBC,IAAI,EAAE,IAAI;MACVC,GAAG,EAAE,IAAI;MACTC,KAAK,EAAE,IAAI;MACXC,SAAS,EAAE,EAAE;MACbC,GAAG,EAAE;IACT;EACA,CAAC;EACDC,OAAO,EAAE;IACP,MAAMC,eAAe,GAAE;MACrB,MAAMC,GAAE,GAAI,MAAMC,KAAI,CAAG,oCAAoC,CAAC;MAC9D,MAAMZ,IAAG,GAAI,MAAMW,GAAG,CAACE,IAAI,EAAE;MAE7B,IAAI,CAACZ,IAAG,GAAID,IAAI,CAACC,IAAI;MACrB,IAAI,CAACC,MAAM,GAACF,IAAI,CAACE,MAAM;MACvB,IAAI,CAACC,aAAa,GAACH,IAAI,CAACO,SAAS;IACnC,CAAC;IACD,MAAMO,aAAa,CAACC,CAAC,EAAC;MACpBA,CAAC,CAACC,cAAc,EAAE;MAClB,MAAMhB,IAAG,GAAI;QACXI,IAAI,EAAE,IAAI,CAACA,IAAI;QACfF,MAAM,EAAE,IAAI,CAACE,IAAI;QACjBC,GAAG,EAAE,IAAI,CAACA,GAAG;QACbE,SAAS,EAAEU,KAAK,CAACC,IAAI,CAAC,IAAI,CAACX,SAAS,CAAC;QACrCY,MAAM,EAAE;MACV;MACA,MAAMC,QAAO,GAAIC,IAAI,CAACC,SAAS,CAACtB,IAAI,CAAC;MAErC,MAAMW,GAAE,GAAI,MAAMC,KAAK,CAAC,+BAA+B,EAAC;QACtDW,MAAM,EAAE,MAAM;QACdC,OAAO,EAAE;UAAC,cAAc,EAAEC,WAAW,GAACZ;QAAI,CAAC;QAC3Ca,IAAI,EAAEN;MACR,CAAC,CAAC;MAEF,MAAMO,GAAE,GAAI,MAAMhB,GAAG,CAACE,IAAI,EAAE;MAE5Be,OAAO,CAACC,GAAG,CAACF,GAAG;IAEjB;EACF,CAAC;EACDG,OAAO,GAAE;IACP,IAAI,CAACpB,eAAe,EAAC;EACvB;AACF","names":["name","data","paes","carnes","opcionaisdata","nome","pao","carne","opcionais","msg","methods","getIngredientes","req","fetch","json","createBurguer","e","preventDefault","Array","from","status","dataJson","JSON","stringify","method","headers","application","body","res","console","log","mounted"],"sourceRoot":"","sources":["C:\\Projetos\\2022\\makeb\\src\\components\\BurguerForm.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <p> Componente de mensagem </p>\r\n    <div>\r\n      <form id=\"burguer-form\" @submit=\"createBurguer\">\r\n        <div class=\"input-container\"> \r\n          <label for=\"nome\">Nome do Cliente </label>\r\n          <input type=\"text\" id=\"nome\" name=\"nome\" v-model=\"nome\" placeholder=\"Digite seu nome\">\r\n        </div>\r\n\r\n        <div class=\"input-container\"> \r\n          <label for=\"pao\">Escolha o pão: </label>\r\n          <select name=\"pao\" id=\"pao\" v-model=\"pao\">\r\n            <option value=\"\"> Selecione seu pão </option>\r\n            <option v-for=\"pao in paes\" :key=\"pao.id\" value=\"pao.tipo\"> \r\n              {{pao.tipo}} \r\n            </option>\r\n          </select>\r\n        </div>\r\n      \r\n        <div class=\"input-container\"> \r\n          <label  for=\"carne\">Escolha a carne do seu Burguer </label>\r\n          <select name=\"carne\" id=\"carne\" v-model=\"carne\">\r\n            <option value=\"\"> Selecione o tipo de carne </option>\r\n            <option v-for=\"carne in carnes\" :key=\"carne.id\" value=\"carne.tipo\"> \r\n              {{carne.tipo}} </option>\r\n          </select>\r\n        </div>\r\n\r\n        <div id=\"opcionais-container\" class=\"input-container\"> \r\n          <label id=\"opcionais-title\" for=\"opcionais\">Selecione os opcionais </label>\r\n            <div class=\"checkbox-container\" v-for=\"opcional in opcionaisdata\" :key=\"opcional.id\">\r\n              <input type=\"checkbox\" name=\"opcionais\" v-model=\"opcionais\" :value=\"opcional.tipo\">\r\n              <span>{{ opcional.tipo }}</span>\r\n          </div>\r\n        </div>\r\n\r\n        <div class=\"input-container\">\r\n          <input type=\"submit\" class =\"submit-btn\" value=\"Criar meu Burguer\">\r\n         </div>\r\n\r\n      </form>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'BurguerForm', \r\n  data(){\r\n    return{\r\n      paes: null,\r\n      carnes: null,\r\n      opcionaisdata: null,\r\n      nome: null,\r\n      pao: null,\r\n      carne: null,\r\n      opcionais: [],\r\n      msg: null\r\n  }\r\n  },\r\n  methods: {\r\n    async getIngredientes(){\r\n      const req = await fetch ('http://localhost:3000/ingredientes');\r\n      const data = await req.json();\r\n\r\n      this.paes = data.paes;\r\n      this.carnes=data.carnes;\r\n      this.opcionaisdata=data.opcionais;\r\n    },\r\n    async createBurguer(e){\r\n      e.preventDefault();\r\n      const data = {\r\n        nome: this.nome,\r\n        carnes: this.nome,\r\n        pao: this.pao,\r\n        opcionais: Array.from(this.opcionais),\r\n        status: \"Solicitado\"\r\n      }\r\n      const dataJson = JSON.stringify(data);\r\n\r\n      const req = await fetch('http://localhost:3000/burgers',{\r\n        method: 'POST',\r\n        headers: {\"Content-Type\": application/json},\r\n        body: dataJson\r\n      });\r\n\r\n      const res = await req.json();\r\n\r\n      console.log(res)\r\n\r\n    }\r\n  },\r\n  mounted(){\r\n    this.getIngredientes()\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n\r\n#burguer-form{\r\n  max-width: 400px;\r\n  margin: 0 auto;\r\n\r\n}\r\n\r\n.input-container{\r\n  display: flex;\r\n  flex-direction: column;\r\n  margin-bottom: 20px;\r\n\r\n}\r\n\r\nlabel{\r\n  font-weight: bold;\r\n  margin-bottom: 15px;\r\n  color: #222;\r\n  padding: 5px 10px;\r\n  border-left: 4px solid #FCBA03;\r\n}\r\n\r\ninput, select{\r\n  padding: 5px 10px;\r\n  width: 300px;\r\n}\r\n\r\n#opcionais-container{\r\n  flex-direction: row;\r\n  flex-wrap: wrap;\r\n}\r\n\r\n#opcionais-title{\r\n  width: 100%;\r\n}\r\n\r\n.checkbox-container{\r\n  display: flex;\r\n  align-items: flex-start;\r\n  width: 50%;\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.checkbox-container span, .checkbox-container input{\r\n  width: auto;\r\n}\r\n\r\n.checkbox-container span{\r\n  margin-left: 6px;\r\n  font-weight: bold;\r\n}\r\n\r\n.submit-btn{\r\n  background-color: #222;\r\n  color: #FCBA03;\r\n  font-weight: bold;\r\n  border: 2px solid #222;\r\n  padding: 10px;\r\n  font-size: 16px;\r\n  margin: 0 auto;\r\n  cursor: pointer;\r\n  transition: .5s;\r\n}\r\n\r\n.submit-btn:hover{\r\n  background-color: transparent;\r\n  color: #222;\r\n}\r\n\r\n</style>"]},"metadata":{},"sourceType":"module"}